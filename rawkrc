mdparser=markdown
hdr_tpl="templates/hdr.tpl"
ftr_tpl="templates/ftr.tpl"
site_title="Bold Daemon"
site_subtitle="Do I preach to you while you're lying stoned in the gutter? No."
stylesheet="templates/style.css"

# blacklist definition - in the form of grep regex
bl="$bl ^index\..*$"            # don't link to index files
bl="$bl ^images$"               # don't link to image dir
bl="$bl ^keys$"                 # don't link to keys dir
bl="$bl ^files$"                # don't link to files dir
bl="$bl ^styles$"               # don't link to styles dir
bl="$bl ^restrict$ ^private$"   # don't link to private files
bl="$bl ^favicon.ico$"
